= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
  %legend= t 'helpers.titles.sign_in', default: 'Sign in'
  .form-inputs
    = f.input :email, :required => false, :autofocus => true, placeholder: 'メールアドレス', input_html: { class: 'input-xlarge', maxlength: 200 }
    = f.input :password, :required => false, placeholder: 'パスワード', input_html: { maxlength: 40 }

  .form-actions
    = f.button :submit, 'ログイン', class: 'btn btn-success'

= render "devise/shared/links"

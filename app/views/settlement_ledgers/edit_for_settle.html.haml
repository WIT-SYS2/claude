.page-header
  %h3 精算結果の登録

= simple_form_for @settlement_ledger, url: { action: 'settle' }, html: { class: 'form-horizontal', method: :put } do |f|
  = f.input :settlement_date, as: :string, input_html: { class: 'datepicker', value: Date.today }
  = f.input :settlement_note, input_html: { maxlength: 40 }
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.button 'submit', '精算完了', class: 'btn btn-primary', data: { confirm: 'よろしいですか？' }
      = link_to 'キャンセル', settlement_ledgers_path, class: 'btn btn-default'

<%- model_class = SettlementLedger -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:ledger_number) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:application_date) %></th>
      <th><%= model_class.human_attribute_name(:applicant_user_id) %></th>
      <th><%= model_class.human_attribute_name(:settlement_date) %></th>
      <th><%= model_class.human_attribute_name(:settlement_note) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @settlement_ledgers.each do |settlement_ledger| %>
      <% if settlement_ledger.deleted? %>
        <tr class="deleted">
      <% else %>
        <tr>
      <% end %>
        <td><%= settlement_ledger.ledger_number %></td>
        <td><%= settlement_ledger.content %></td>
        <td><%= settlement_ledger.note %></td>
        <td><%= number_with_delimiter(settlement_ledger.price) %></td>
        <td><%= settlement_ledger.application_date %></td>
        <td><%= settlement_ledger.applicant.name %></td>
        <td><%= settlement_ledger.settlement_date %></td>
        <td><%= settlement_ledger.settlement_note %></td>
        <td>
          <% unless settlement_ledger.deleted? || settlement_ledger.completed? %>
            <% if can? :settle, SettlementLedger %>
              <%= link_to '精 算', edit_for_settle_settlement_ledger_path(settlement_ledger), :class => 'btn btn-mini' %>
            <% end %>
            <% if can?(:manage, SettlementLedger) || (can?(:edit, SettlementLedger) && (settlement_ledger.applicant_user_id == @current_user.id)) %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_settlement_ledger_path(settlement_ledger), :class => 'btn btn-mini' %>
            <% end %>
            <% if can?(:manage, SettlementLedger) || (can?(:destroy, SettlementLedger) && (settlement_ledger.applicant_user_id == @current_user.id)) %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          settlement_ledger_path(settlement_ledger),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_settlement_ledger_path,
            :class => 'btn btn-primary' %>
